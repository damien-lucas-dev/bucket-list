{% extends 'base.html.twig' %}


{% block body %}

    <div>
        <h2>Write a wish!</h2>

        {# affichage du formulaire #}
        {# affiche la balise d'ouverture #}
        {{ form_start(wishForm) }}

        {# affiche tous les champs du formulaire #}
        {# {{ form_widget(wishForm) }} #}
        {# Sauf que bah ! Nous on préfère maîtriser la bête ! #}
        <div class="group">
            {{ form_label(wishForm.title) }}
            {{ form_widget(wishForm.title) }}
            {{ form_errors(wishForm.title) }}
        </div>
        <div class="group">
            {{ form_label(wishForm.description) }}
            {{ form_widget(wishForm.description) }}
            {{ form_errors(wishForm.description) }}
        </div>
        <div class="group">
            {{ form_label(wishForm.author) }}
            {{ form_widget(wishForm.author) }}
            {{ form_errors(wishForm.author) }}
        </div>

        <button>Envoyer !d</button>
        {# ferme la balise, MAIS AVANT affiche d'éventuels champs oubliés #}
        {{ form_end(wishForm) }}

    </div>

{% endblock %}


{% block title %}Create new Wish | {{ parent() }}{% endblock %}
